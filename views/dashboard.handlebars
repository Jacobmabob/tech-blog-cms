<div class="flex p-4 flex-col items-center bg-white w-full my-7 space-y-4 flex-grow rounded">
    <h2 class="text-2xl text-center p-4 font-medium">Dashboard</h2>
    <h3 class="text-xl border-b text-center font-normal">Create a new post</h3>
    <form action="submit" class="w-full space-y-3">
        <input id="new-post-title" type="text" class="w-full border rounded" placeholder="Title">
        <textarea id="new-post-body" type="text" rows="7" class="w-full border rounded" placeholder="Body"></textarea>
    </form>
    <button type="button" id="update-post-btn"
    class="hidden w-32 text-white mb-4 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Update Post</button>
    <button type="button" id="delete-post-btn"
    class="hidden w-32 text-white mb-4 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Delete Post</button>
    <button type="button" id="new-post-btn"
    class="w-32 text-white mb-4 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">New Post</button>
   
<h3 class="text-xl border-b text-center font-normal">Your posts</h3>
    {{> userPosts}}
</div>

<script src="../js/dashboard.js"></script>